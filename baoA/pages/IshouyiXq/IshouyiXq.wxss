
page{
  background: #ffffff;
}
.cont{
  height: 100%;
  width: 100%;

}
.cont .header{
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 100rpx;
}
.cont .header .title{
  width: 300rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #666666;
  justify-content: center;
}
.cont .header .title image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.cont .header .money{
  width: 300rpx;
  font-size: 56rpx;
  color: #333333;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 订单信息 */
.cont .Info{
  height: 100%;
  width: 100%;
}
.cont .Info .item{
  height: 94rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  color: #777777;
  font-size: 32rpx;

}
.cont .Info .item .left{
  font-size: 32rpx;
  color: #999999;
}
.cont .Info .goodsinfo{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
}
