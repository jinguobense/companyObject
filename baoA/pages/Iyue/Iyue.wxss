.tixian{
  width: 100%;
  background: #efefef;
}
page{
  min-height: 100%;
  background: #fff;
}
.tops{
  width: 100%;
  height: 108rpx;
  background: #fff;
}
.tops .tabs{
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tops .tabs>text{
 display: block;
 width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 3rpx solid #fff;
}
.tops .tabs>text.active{
  border-bottom: 3rpx solid #ff1b1b;
  color: #ff1b1b;
}
/* 提现内容部分  */
.content{
  width: 100%;
}
.content .item>view{
  width: 47rpx;
}
.content .item{
  width: 100%;
  height: 108rpx;
  background-color: #ffffff;
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
}
.content .item .pic{
  width: 30rpx;
  height: 31rpx;
  margin-left:0rpx
}
.content .item image{
  width: 18rpx;
  height: 33rpx;
  margin-left: 147rpx;
}
.tixianmoney{
  width: 100%;
  height: 140rpx;
  background-color: #ffffff;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.tixianmoney .money{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.tixianmoney .money .left{
  display: flex;
}
.tixianmoney .money .left text{
  font-size: 30rpx;
  font-weight: bold;
}
.tixianmoney .money .tixianbtn{
  color: #ff1b1b;
  font-size: 28rpx;
  margin-right: 49rpx;
}
/* 提现按钮 */
.content .btn{
  width: 100%;
  height: 100rpx;
  background: #ff1b1b;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}


/* 输入密码 */
.mimabox{
  height: 100%;
  width: 100%;
}
.mimabox .mask{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}
.mimabox .shuru{
  height: 50%;
  width: 100%;
  background-color: #f9f9f9;
  position: absolute;
  top: 50%;
  left: 0rpx;
  margin-top: -25%;
  z-index: 200;
}
.mimabox .shuru .rutitle{
  height: 98rpx;
  width: 100%;
  line-height: 98rpx;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 3rpx;
  border-bottom: 1rpx solid #efefef;
}
.mimabox .shuru .rutitle image{
  width: 17rpx;
  height: 32rpx;
  margin-left: 28rpx;
  margin-right: 237rpx;

}
.mimabox .shuru .number{
  width: 680rpx;
  height: 116rpx;
  border: 2rpx solid #8d8d8d;
  border-radius: 8rpx;
  margin: 0rpx auto;
  margin-top: 46rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;

}
.mimabox .shuru .number .item{
  width: 114rpx;
  height: 98rpx;
  border-right: 2rpx solid #8d8d8d;
  position: relative;
}
.mimabox .shuru .number .item:last-of-type{
  border-right: none;
}
.mimabox .shuru .number .item .dian{
  width: 30rpx;
	height: 30rpx;
  background-color: #000000;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -15rpx;
  margin-left: -15rpx;
}

.mimabox .shuru .number .input{
  width: 70rpx;
  height: 70rpx;  
  margin-left: 32rpx;
  margin-top: 10rpx;
  position: absolute;
  left: -100rpx;
  opacity: 0;
  z-index: -1;
}
/* 忘记密码 */
.mimabox .shuru .forgetmima{
  font-size: 28rpx;
  color: #1b9efa;
  margin-right: 54rpx;
  margin-top: 24rpx;
  text-align: right;


}