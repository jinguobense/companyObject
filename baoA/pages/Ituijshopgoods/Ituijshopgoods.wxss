.shopbox{
  width: 100%;
  background: #fff;
  display: flex;
  margin-bottom: 25rpx;
}
.shopbox image{
  width: 169rpx;
	height: 169rpx;
  border-radius: 7rpx;
  margin-left: 28rpx;
}
.shopbox .shopcont{
  height: 169rpx;
  width: 470rpx;
  display: flex;
  flex-direction: column;
  margin-left: 22rpx;
}
.shopbox .shopcont .goodsIfo{
  width: 470rpx;
  height: 94rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  color: #333;
  margin-bottom: 15rpx;
 
}
.shopbox .shopcont .money{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopbox .shopcont .money .left{
  width: 190rpx;
  height: 50rpx;
  font-size: 25rpx;
  color: #e2211c;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopbox .shopcont .money .left .active{
  width: 84rpx;
  height: 28rpx;
  color: #e2931c;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
  border: 1rpx solid #e2931c;
}
.shopbox .shopcont .money .left text{
  font-size: 32rpx;
  color: #e2211c;
}

.shopbox .shopcont .money .btn{
  width: 111rpx;
	height: 42rpx;
	background-color: #e2211c;
  border-radius: 21rpx;
  text-align: center;
  font-size: 21rpx;
  color: #ffffff;
  line-height: 42rpx;
}
