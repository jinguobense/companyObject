page{
  background: #efefef;
}
.headbox{
  width: 100%;
  height: 100rpx;
  background-color: #e2211c;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
}
.headbox .searchbox{
  width: 100%;
  height: 66rpx;
  background: #fff;
  border-radius: 66rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;

} 
.headbox .searchbox view{
  flex: 1;
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
}
.headbox .searchbox input{
  font-size: 28rpx;
  width: 500rpx;
  margin-left: 50rpx;
  margin-right: 10rpx;
}
/* 内容列表 */
.contbox{
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
}
.contbox .list{
  width: calc(100% - 48rpx);
  height: 440rpx;
  background: #fff;
  overflow: hidden;
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-bottom: 14rpx;
}
.contbox .list .title{
  height: 78rpx;
  width: 100%;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 16rpx;

}
.contbox .list .title text{
  display: block;
  height: 78rpx;
  width: 674rpx;
  line-height: 41rpx;

}
.contbox .list .imgbox{
  width: 100%;
  height: 164rpx;
  display: flex;
  align-items: center;
}
.contbox .list .imgbox image{
  width: 164rpx;
	height: 164rpx;
  border-radius: 7rpx;
  margin-right: 15rpx;
}
.contbox .list .btnbox{
  height: 148rpx;
  width: 100%;
  padding-right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;

}
.contbox .list .btnbox>view{
  width: 142rpx;
	height: 44rpx;
	background-color: #e2211c;
  border-radius: 22rpx;
  color: #fff;
  font-size: 25rpx;
  line-height: 44rpx;
  margin-right: 25rpx;
  text-align: center;
}
.contbox .list .btnbox view.btnsee{
  width: 93rpx;
}

/* 跳转弹框 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0, 0, 0, 0.3);
  z-index: 200;
}
.modelbox{
  height: 600rpx;
  width: 570rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  margin-top: -300rpx;
  left: 50%;
  margin-left: -300rpx;
  padding-left: 30rpx;
  z-index: 300;

}
.modelbox>view{
  height: 94rpx;
  width: 100%;
  line-height: 114rpx;

}