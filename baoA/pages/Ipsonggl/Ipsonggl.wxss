page{
  min-height: 100%;
  background: #f2f2f2;
}
.peisong{
  width: 100%;
  height: 100%;
}
.peisongbox{
  width: 621rpx;
	height: 503rpx;
	background-color: #ffffff;
  border-radius: 14rpx;
  padding: 40rpx;
  margin: 0rpx auto;
  margin-top:14rpx;
}
.peisongbox .title{
  height: 110rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef;
  font-size: 33rpx;
  color: #333;
  font-weight: bold;
  line-height: 110rpx;
  margin-bottom: 20rpx;
}
.peisongbox .peicont{
  height: 480rpx;
  width: 100%;
}
.peisongbox .peicont .selectbox .select{
  height: 50rpx;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 31rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.peisongbox .peicont .selectbox .select image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 40rpx;
}
.peisongbox .peicont .morecont{
  width: 576rpx;
  height: auto;
  margin-left:80rpx ;
  margin-bottom: 30rpx;
}
.peisongbox .peicont .morecont .money{
  width: 576rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.peisongbox .peicont .morecont .money .moneyb{
  width: 200rpx;
	height: 56rpx;
	border-radius: 7rpx;
  border: solid 1rpx #2f2f2f;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.peisongbox .peicont .morecont .money .moneyb text{
  margin-left: 10rpx;
}
.peisongbox .peicont .morecont .money .text{
  font-size: 25rpx;
  color: #999999;
}
.peisongbox .peicont .morecont .psxz{
  height:92rpx;
  width: 100%;
}
.peisongbox .peicont .morecont .psxz .xztitle{
  font-size: 28rpx;
  color: #999999;
}
.peisongbox .peicont .morecont .psxz .itembox{
  height: 35rpx;
  display: flex;
  margin-top: 30rpx;
}
.peisongbox .peicont .morecont .psxz .itembox .item{
  height: 35rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333333;
  margin-left: 30rpx;
}
.peisongbox .peicont .morecont .psxz .item .selectboxb image{
  width: 25rpx;
  height: 25rpx;
  margin: 0rpx 20rpx;
}
.psguiz{
  width: 621rpx;
	height: 310rpx;
	background-color: #ffffff;
  border-radius: 14rpx;
  margin: 0rpx auto;
  color: #d52121;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
  
}
.psguiz>view{
  width: 621rpx;
  line-height: 40rpx;
}
.btn{
  width: 611rpx;
	height: 76rpx;
	background-color: #da3838;
	border-radius: 38rpx;
  color: #fff;
  text-align: center;
  line-height: 76rpx;
  margin: 0rpx auto;
  margin-top: 38rpx;
}