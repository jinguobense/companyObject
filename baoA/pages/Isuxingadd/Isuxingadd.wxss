/* baoA/pages/Isuxingadd/Isuxingadd.wxss */
.suxingadd{
  height: 100%;
  width: 100%;
  background: #fff;
}
.suxingadd .item{
  height: 110rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  align-items: center;
  font-size: 31rpx;
  color: #333333;
  position: relative;
}
.suxingadd .item>view{
  width: 42rpx;
}
.suxingadd .item>input{
  font-size: 31rpx;
 
}
.suxingadd .item image{
  width: 32rpx;
  height: 17rpx;
 position: absolute;
 right: 62rpx;
 top: 50%;
 margin-top: -8rpx;
  color: #999999;
}
/* 弹出框 */
.suxingadd .model{
  width: 374rpx;
  height: 220rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 5rpx 0rpx 
    rgba(0, 0, 0, 0.04);
    position: absolute;
    top: 291rpx;
    left: 50%;
    margin-left: -137rpx;
    z-index: 9999;
}
.suxingadd .model view:nth-child(1){
  border-bottom: 1rpx solid #efefef;
}
.suxingadd .model>view{
  width: 374rpx;
  height: 110rpx;
  text-align: center;
  font-size: 31rpx;
  color: #333333;
  line-height: 110rpx;
}
/* 添加按钮 */
.suxingadd .addbtn{
  width: 415rpx;
	height: 88rpx;
	background-color: #ff1b1b;
  border-radius: 44rpx;
  color: #fff;
  font-size: 35rpx;
  line-height: 88rpx;
  text-align: center;
  position: absolute;
  bottom: 300rpx;
  left: 50%;
  margin-left: -212rpx;

}