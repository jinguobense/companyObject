/* baoA/pages/Igaogadd/Igaogdd.wxss */
.gaodadd .item{
  height: 180rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  align-items: center;
  font-size: 31rpx;
  color: #333333;
  position: relative;
}
.gaodadd .item .kong{
  width: 42rpx;
}
.gaodadd .item .select{
  width: 280rpx;
  height: 60rpx;
  border: 1rpx solid #666;
  background: #fff;
  display: flex;
  align-items: center;
  position: relative;
}
.gaodadd .item .select input{
  width: 280rpx;
  height: 40rpx;
  text-align: center;
}
.gaodadd .item .select image{
  height: 21rpx;
  width: 21rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -10rpx;
}
.gaodadd .item  .addpic{
  height: 280rpx;
  display: flex;
  align-items: center;
}
.gaodadd .item  .addpic image{
  width: 266rpx;
	height: 133rpx;
  margin: 0rpx 10rpx;
 
}
/* 保存按钮 */
.gaodadd .btn{
  width: 100%;
	height: 100rpx;
	background-color: #ff1b1b;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  z-index: 100;
}
/* 弹框 */
.gaodadd .selectbox1{
  width: 100%;
  position: absolute;
  top: 305rpx;
  left: 195rpx;
  z-index: 999;
  background: #fff;
  transition: all 0.5;
}
.gaodadd .selectbox2{
  width: 100%;
  position: absolute;
  top: 481rpx;
  left: 195rpx;
  z-index: 999;
  background: #fff;
}
.gaodadd .selectbox1 .list,.gaodadd .selectbox2 .list{
  width: 280rpx;
  height: 60rpx;
  border-bottom: 1rpx solid #666;
  background: #fff;
  text-align: center;
  line-height: 60rpx;
}
/* 图片选择弹框 */
.picmode{
  height: 300rpx;
  width: 100%;
  background: #fff;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 200;
}
.picmode>view{
  height: 98rpx;
  width: 100%;
  text-align: center;
  line-height: 98rpx;
  border-bottom: 1rpx solid #efefef;
}