page{
  background-color: #e9e9e9;
}
.headbox{
  width: 100%;
  height: 100rpx;
  background-color: #e2211c;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1111;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
}
.headbox .searchbox{
  width: 100%;
  height: 66rpx;
  background: #fff;
  border-radius: 66rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;

} 
.headbox .searchbox view{
  flex: 1;
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
}
.headbox .searchbox input{
  font-size: 28rpx;
  width: 500rpx;
  margin-left: 50rpx;
  margin-right: 10rpx;
}

.contbox{
  width: 100%;
}
/* 内容左边部分 */
.contbox .lefttab{
  width: 146rpx;
  background: #fff;
  height: 100%;
  position: fixed;
  left: 0;
  top: 100rpx;
  display: flex;
  overflow-y: auto;
  flex-direction: column;
  z-index: 1000;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.lefttab .list{
  width: 100%;
  height: 90rpx;
  background: #F6F6F6;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border-left: 4rpx solid #F6F6F6;
  letter-spacing: 2rpx;
  border-bottom: 1rpx solid #f4f4f4;
  border-top: 1rpx solid #f4f4f4;
}
.lefttab .active{
  color: #E90D16;
  box-sizing: border-box;
  border-left: 4rpx solid #E90D16;
  background: #fff;
}
/* 右边内容部分 */
.right{
  width: 585rpx;
  height: 100%;
  margin-left: 168rpx;
  margin-top: 100rpx;
}
.right .title{
  height: 70rpx;
  width: 100%;
  line-height: 70rpx;
  font-size: 25rpx;
  color: #333333;
}
.right .rcontbox{
  width: 521rpx;
	background-color: #ffffff;
  border-radius: 14rpx;
  padding:21rpx;
  float: left;
}
.right .rcontbox .rlist{
  height: 214rpx;
  width: 167rpx; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 25rpx;
  color: #333333;
  align-items: center;
  float: left;
  margin-bottom: 30rpx;
}
.right .rcontbox .rlist image{
  width: 167rpx;
	height: 167rpx;
}
.right .rcontbox .rlist:nth-child(3n-1){
  margin-right: 10rpx;
  margin-left: 10rpx;
}