/* baoA/pages/Isuxingadd/Isuxingadd.wxss */
.suxingadd{
  height: 100%;
  width: 100%;
  background: #fff;
}
.suxingadd .item{
  height: 110rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  align-items: center;
  font-size: 31rpx;
  color: #333333;
  position: relative;
}
.suxingadd .item>view{
  width: 42rpx;
}
.suxingadd .item>input{
  font-size: 31rpx;
 
}
.suxingadd .item .image{
  width: 14rpx;
	height: 24rpx;
 position: absolute;
 right: 62rpx;
 top: 50%;
 margin-top: -8rpx;
  color: #999999;
}
.suxingadd view.pic{
  height: 200rpx;
  width: 100%;
}
.suxingadd .pic image{
  width: 172rpx;
	height: 172rpx;
}
/* 弹出框 */
.suxingadd .model{
  width: 374rpx;
  height: 220rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 5rpx 0rpx 
    rgba(0, 0, 0, 0.04);
    position: absolute;
    top: 316rpx;
    left: 50%;
    margin-left: -137rpx;
    z-index: 9999;
}
.suxingadd .model view:nth-child(1){
  border-bottom: 1rpx solid #efefef;
}
.suxingadd .model>view{
  width: 374rpx;
  height: 110rpx;
  text-align: center;
  font-size: 31rpx;
  color: #333333;
  line-height: 110rpx;
}
/* 添加按钮 */
.suxingadd .addbtn{
  width: 100%;
	height: 88rpx;
	background-color: #ff1b1b;
  color: #fff;
  font-size: 35rpx;
  line-height: 88rpx;
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
 
}

/* 商品 */
.shopbox{
  width: 100%;
  background: #efefef;
  display: flex;
  margin-bottom: 25rpx;
  border-radius: 6rpx;
}
.shopbox image{
  width: 150rpx;
	height: 150rpx;
  border-radius: 6rpx;
  margin-left: 28rpx;
}
.shopbox .shopcont{
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-left: 22rpx;
  justify-content: center;

}
.shopbox .shopcont .goodsIfo{
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
 
}
.shopbox .shopcont .money{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopbox .shopcont .money .left{
  width: 190rpx;
  height: 50rpx;
  font-size: 25rpx;
  color: #e2211c;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopbox .shopcont .money .left .active{
  width: 84rpx;
  height: 28rpx;
  color: #e2931c;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
  border: 1rpx solid #e2931c;
}
.shopbox .shopcont .money .left text{
  font-size: 32rpx;
  color: #e2211c;
}

.shopbox .shopcont .money .btn{
  width: 111rpx;
	height: 42rpx;
	background-color: #e2211c;
  border-radius: 21rpx;
  text-align: center;
  font-size: 21rpx;
  color: #ffffff;
  line-height: 42rpx;
}
