/* baoA/pages/Ishouyi/Ishouyi.wxss */
page{
  background-color: #efefef;
}
.shouyi{
  background: #f2f2f2;
}
.shouyi .tops{
  height: 160rpx;
  width: 100%;
  background-color: #e2211c;
  position: relative;
  overflow: hidden;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.shouyi .tops .tabs{
  width: 346rpx;
  height: 54rpx;
  margin: 0px auto;
  color: #f2f2f2;
  border-radius: 5rpx;
  border: 1rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 25rpx;
}
.shouyi .tops .tabs>text{
  display: block;
  width: 172rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
}
.shouyi .tops .tabs>text.active{
  background: #fff;
  color: #e2211c;
}
.shouyi .tops .chazhao{
	width: 300rpx;
	border-radius: 20rpx;
  border: solid 1rpx #ffffff;
  position: absolute;
  bottom: 14rpx;
  right:28rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  color: #333333;
  text-align: center;
  display: flex;
  background-color: #fff;
  align-items: center;
  justify-content: space-around;
}
.shouyi .tops .chazhao .data{
  height: 50rpx;
  width: 260rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 20rpx;
}
.shouyi .tops .chazhao .right{
  margin-right:20rpx ;
}
/* 日收益 */
.cont{
  width: 100%;
  height: 100%;
  margin-top: 160rpx;

}
.cont .list{
  height: 154rpx;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 42rpx;
  border-bottom: 1rpx solid #efefef;
  background: #fff;
}
.cont .list image{
  width: 98rpx;
	height: 98rpx;
	border-radius: 50%;
}
.cont .list .contInfo{
  width: 300rpx;
  height: 98rpx;
  font-size: 32rpx;
  color: #333333;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cont .list .contInfo text{
  font-size: 22rpx;
  color: #666666;
}
.cont .list .money{
  height: 98rpx;
  color: #f40643;
  font-size: 25rpx;
  margin-left: 174rpx;

}
/* 月收益 */
.moubox{
  height: 500rpx;
  width: 640rpx;
  border: 2rpx solid #efefef;
  margin: 54rpx 20rpx;
  border-radius: 15rpx;
  float: left;
  box-shadow: 6rpx 6rpx 6rpx #f2f2f2;
  padding: 30rpx 30rpx;
  background: #fff;

}
.moubox .top{
  height: 100rpx;
  border-bottom: 2rpx solid #efefef;
  font-size: 36rpx;
  color: #666666;
  line-height: 100rpx;
}
.moubox .morebox{
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;

}
.moubox .morebox .item{
  height: 130rpx;
  width: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: #666666;
}
.red{
  color: red;
}
.moubox .morebox .item .price::before{
  content: "￥";
  color: red;
  font-size: 24rpx;
}
.moubox .morebox .item text{
  font-size: 36rpx;
}
.moubox .morebox .bom{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;

}