/* baoA/pages/Ishouyi/Ishouyi.wxss */
.shouyi{
  background: #f2f2f2;
}
.shouyi .tops{
  height: 160rpx;
  width: 100%;
  background-color: #e2211c;
  position: relative;
  overflow: hidden;
}
.shouyi .tops .tabs{
  width: 346rpx;
  height: 54rpx;
  margin: 0px auto;
  color: #f2f2f2;
  border-radius: 5rpx;
  border: 1rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 25rpx;
}
.shouyi .tops .tabs>text{
  display: block;
  width: 172rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
}
.shouyi .tops .tabs>text.active{
  background: #fff;
  color: #e2211c;
}
.shouyi .tops .chazhao{
  width: 102rpx;
	height: 40rpx;
	border-radius: 20rpx;
  border: solid 1rpx #ffffff;
  position: absolute;
  bottom: 14rpx;
  right:28rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  color: #ffffff;
  text-align: center;
}
/* 月收益 */
.cont{
  width: 100%;
  height: 100%;

}
.cont .list{
  height: 154rpx;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 42rpx;
  border-bottom: 1rpx solid #efefef;
  background: #fff;
}
.cont .list image{
  width: 98rpx;
	height: 98rpx;
	border-radius: 50%;
}
.cont .list .contInfo{
  width: 300rpx;
  height: 98rpx;
  font-size: 32rpx;
  color: #333333;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cont .list .contInfo text{
  font-size: 22rpx;
  color: #666666;
}
.cont .list .money{
  height: 98rpx;
  color: #f40643;
  font-size: 25rpx;
  margin-left: 174rpx;

}

