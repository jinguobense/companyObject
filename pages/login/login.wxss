/* pages/login/login.wxss */
.login{
	width:100%;
	/* position: relative; */
}
.bg{
	width:100%;
	height:540rpx;
	position: fixed;
	top:0;
	left:0;
	z-index: -1;
}
.loginBox{
	width:100%;
	padding:78rpx;
	box-sizing: border-box;
	/* position: absolute; */
	top:280rpx;
	left:0;
}
.bg_fff{
	background: #fff;
	color: #ee6d54;
	border: 2rpx solid #ee6d54;
}
.loginCon{
	width:100%;
	height: 694rpx;
	background-color: #ffffff;
	border-radius: 28rpx;
	box-shadow: 2rpx 2rpx 14rpx 0rpx rgba(0,0,0,0.2);
}
.title{
	width:100%;
	text-align: center;
	color:#fff;
	font-size: 60rpx;
	margin-top:180rpx;
}
.loginCon{
	padding:46rpx;
	box-sizing: border-box;
}
.loginItem{
	width:100%;
	height:116rpx;
	border-bottom:1rpx solid #eee;
	padding:0 30rpx;
	box-sizing: border-box;
}
.leftimg{
	width:40rpx;
	height:29rpx;
}
.padding-x-20{
	padding:0 20rpx;
	box-sizing: border-box;
}
.flex{
	display: flex;
	align-items: center;
}
.margin-top-60{
	margin-top:60rpx;
}
.margin-left-20{
	margin-left:20rpx;
}
input{
	padding:0 20rpx;
	box-sizing: border-box;
	font-size: 30rpx;
}
.loginBtn{
	width:100%;
	height:70rpx;
	border-radius:35rpx;
	background:#ff4040;
	font-size: 32rpx;
	text-align: center;
	line-height: 70rpx;
	color:#FFF;
}
.rem{
	text-align: right;
	font-size: 24rpx;
	color: #666;
	margin-top:30rpx;
}
.reg{
	color:#ee6d54;
	text-align: center;
	font-size: 28rpx;
	margin-top:100rpx;
}